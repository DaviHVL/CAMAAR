<header class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-6">
  
  <div class="flex items-center gap-4">
    <button data-action="click->sidebar#toggle" class="text-gray-600 focus:outline-none hover:bg-gray-100 p-2 rounded-md">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
    </button>
    
    <h1 class="text-xl font-medium text-gray-800"><%= title %></h1>
  </div>

  <div class="flex items-center gap-4">
    
    <div class="relative" data-controller="dropdown">
      
      <button data-action="click->dropdown#toggle" class="w-10 h-10 rounded-full bg-[#7A2B7A] flex items-center justify-center text-white font-bold hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#7A2B7A] transition-all">
        <%= initials %>
      </button>

      <div 
        data-dropdown-target="menu"
        class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 border border-gray-200 z-50 origin-top-right transform transition-all"
        role="menu"
      >
        <div class="px-4 py-2 text-sm text-gray-700 border-b border-gray-100">
          <p class="font-medium truncate"><%= @user.nome %></p>
          <p class="text-xs text-gray-500 truncate"><%= @user.email %></p>
        </div>

        <%= link_to edit_password_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center gap-2" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path></svg>
          Alterar Senha
        <% end %>

        <%= button_to logout_path, method: :delete, class: "w-full text-left block px-4 py-2 text-sm text-red-600 hover:bg-gray-100 cursor-pointer" do %>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
            Sair da conta
          </div>
        <% end %>
      </div>

    </div>
  </div>
</header>