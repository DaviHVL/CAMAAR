<div class="flex flex-col">
  <label class="block text-gray-600 text-sm font-bold mb-2 ml-1" for="<%= @name %>">
    <%= @label %>
  </label>
  <input
    type="<%= @type %>"
    name="<%= @name %>"
    id="<%= @name %>"
    placeholder="<%= @placeholder %>"
    class="appearance-none border border-gray-200 rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:border-purple-500 placeholder-gray-400"
  >
</div>