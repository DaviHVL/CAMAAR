<div class="min-h-screen bg-gray-200 flex items-center justify-center p-4">
  
  <div class="bg-white rounded-lg shadow-lg w-full max-w-4xl flex flex-col md:flex-row h-[500px] overflow-hidden">
    
    <div class="w-full md:w-[55%] p-12 flex flex-col justify-center">
      
      <h2 class="text-2xl font-normal text-center text-gray-800 mb-10 tracking-[0.2em]">LOGIN</h2>

      <%# --- INICIO DA ALTERAÇÃO --- %>
      <%# Adicionamos este bloco para exibir mensagens de sucesso (verde) %>
      <% if flash[:notice] %>
        <div class="bg-green-50 text-green-600 text-sm px-4 py-2 rounded mb-6 text-center border border-green-200">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <%# --- FIM DA ALTERAÇÃO --- %>

      <% if flash[:alert] %>
        <div class="bg-red-50 text-red-600 text-sm px-4 py-2 rounded mb-6 text-center border border-red-200">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= form_with url: login_path, local: true, class: "space-y-6" do |form| %>
        
        <%= render(FormInputComponent.new(
              label: "Email",
              name: "email",
              type: :email,
              placeholder: "aluno@aluno.unb.br"
            )) %>

        <%= render(FormInputComponent.new(
              label: "Senha",
              name: "password",
              type: :password,
              placeholder: "Password"
            )) %>

        <div class="pt-2">
          <%= render(ButtonComponent.new(
                text: "Entrar",
                type: :submit,
                variant: :primary
              )) %>
        </div>

      <% end %>
    </div>

    <div class="hidden md:block md:w-[45%] h-full">
      <%= render(BrandPanelComponent.new) %>
    </div>

  </div>
</div>