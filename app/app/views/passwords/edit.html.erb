<div class="min-h-screen bg-gray-200 flex items-center justify-center p-4">
  <div class="bg-white rounded-lg shadow-lg w-full max-w-md p-8">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Alterar Senha</h2>

    <% if current_user.errors.any? %>
      <div class="bg-red-100 text-red-700 p-3 rounded mb-4 text-sm">
        <%= current_user.errors.full_messages.first %>
      </div>
    <% end %>

    <%= form_with model: current_user, url: password_path, method: :patch, local: true do |f| %>
      
      <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2">Nova Senha</label>
        <%= f.password_field :password, class: "w-full border border-gray-300 rounded p-2 focus:border-purple-500 focus:outline-none" %>
      </div>

      <div class="mb-6">
        <label class="block text-gray-700 font-bold mb-2">Confirmar Nova Senha</label>
        <%= f.password_field :password_confirmation, class: "w-full border border-gray-300 rounded p-2 focus:border-purple-500 focus:outline-none" %>
      </div>

      <div class="flex flex-col gap-3">
        <%= f.submit "Atualizar Senha", class: "w-full bg-purple-700 text-white font-bold py-2 rounded hover:bg-purple-800 cursor-pointer" %>
        
        <%= link_to "Cancelar", dashboard_path, class: "text-center text-sm text-gray-600 hover:text-gray-800" %>
      </div>
    <% end %>
  </div>
</div>