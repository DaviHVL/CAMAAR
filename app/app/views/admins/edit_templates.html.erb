<div class="min-h-full flex flex-col p-4">

  <div class="w-full max-w-4xl mx-auto mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Gerenciamento - Templates</h1>
  </div>

  <div class="w-full max-w-4xl mx-auto p-6 bg-white rounded-xl shadow-xl">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      
      <%# LOOP FUTURO: Se @templates estiver vazio, nada aqui serÃ¡ renderizado %>
      <% @templates.each do |template| %>
        <div class="bg-gray-100 p-4 rounded-lg shadow-md border border-gray-200 flex flex-col justify-between h-32 hover:shadow-lg transition duration-200">
          <div class="flex justify-between items-start">
            <div>
              <h2 class="text-lg font-semibold text-gray-800"><%= template.name %></h2>
              <p class="text-sm text-gray-500"><%= template.description %></p>
            </div>
            <div class="flex space-x-2 text-gray-500">
              <span title="Editar" class="cursor-pointer hover:text-purple-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>
              </span>
              <span title="Excluir" class="cursor-pointer hover:text-red-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
              </span>
            </div>
          </div>
        </div>
      <% end %>
      
      <div class="bg-gray-50 p-4 rounded-lg border border-gray-300 flex items-center justify-center h-32 cursor-pointer hover:bg-gray-100 hover:shadow-md transition duration-200">
        <%= link_to "#", class: "w-full h-full flex items-center justify-center" do %>
          <span class="text-5xl font-light text-gray-400">+</span>
        <% end %>
      </div>
      
    </div>
  </div>
</div>